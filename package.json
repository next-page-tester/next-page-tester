{
  "name": "next-page-tester",
  "description": "Enable DOM integration testing on Next.js pages",
  "version": "0.8.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!__tests__"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "npm run clean && tsc",
    "test": "jest ./src",
    "test:source": "npm run test:ts && npm t -- --coverage",
    "test:ts": "tsc --noEmit",
    "prepare": "npm run test:source && npm run compile",
    "preversion": "npm run prepare",
    "version": "git add package.json",
    "postversion": "git push && git push --tags",
    "format": "prettier --write \"**/*.{js,json,md,ts}\""
  },
  "keywords": [
    "next",
    "nextjs",
    "test",
    "testing",
    "dom",
    "ui",
    "unit",
    "integration",
    "routing"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toomuchdesign/next-pages-tester.git"
  },
  "author": "Andrea Carraro <me@andreacarraro.it>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.0",
    "@types/find-root": "^1.1.2",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@types/normalize-path": "^3.0.0",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/webpack": "^4.41.22",
    "babel-jest": "^26.3.0",
    "husky": "^4.0.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.0.0",
    "next": "^10.0.2",
    "prettier": "^2.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@types/express": "^4.17.8",
    "fast-glob": "^3.2.4",
    "find-root": "^1.1.0",
    "node-mocks-http": "^1.9.0",
    "normalize-path": "^3.0.0"
  },
  "peerDependencies": {
    "next": "^10.0.0",
    "react": "^16.6.0 || ^17"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testMatch": [
      "**/?(*.)+(test).[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "__fixtures__"
    ],
    "coveragePathIgnorePatterns": [
      "__tests__"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,json}": [
      "prettier",
      "npm run test:source -- ."
    ],
    "**/*.{md}": [
      "prettier"
    ]
  }
}
